# !/bin/bash

size=$1

spacing() {
  case $size in
    "lg") # large
      echo ""
      echo ""
      echo ""
      echo "--------------------------------------//--------------------------------------"
      echo ""
      echo ""
      echo "";;

    "sm") # small
      echo "-------------------//-------------------";;

    *) # medium (default)
      echo ""
      echo "----------------------------//----------------------------"
      echo "";;
  esac
}

spacing
